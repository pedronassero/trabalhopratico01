                                              sleep(3);
                                              printf("* E assim, você acabou com os Trolls e salvou a tribo élfica\n");
                                              sleep(3);
                                              printf("* Como consequência dessa luta, você perdeu 5 pontos de vida.\n");
                                              vida -= 5;
                                              sleep(3);
                                              printf("* Por causa de sua atitude, sua reputação com os Elfos está alta.\n");
                                              printf("* Como recompensa, os Elfos te deram uma fruta estranha... Deseja comer?\n");
                                              printf("* 1 - Comer\n");
                                              printf("* 2 - Jogar fora\n");
                                              scanf("%d", &fruta);
                                              while (fruta != 1 && fruta != 2) {
                                                printf("! Opção não reconhecida, tente novamente !\n");
                                                printf("* 1 - Comer\n");
                                                printf("* 2 - Jogar fora\n");
                                                scanf("%d", &fruta);
                                              }
                                              switch(fruta) { //comer fruta
                                                case 1:
                                                   printf("* Você escolheu comer a fruta...\n");
                                                   sleep(3);
                                                   printf("* A fruta te recuperou 10 pontos de vida!\n");
                                                   vida += 10;
                                                   sleep(2);
                                                   printf("* Sua vida: %d\n", vida);
                                                   break;
                                                case 2: //jogar fora
                                                   printf("* Você escolheu jogar a fruta fora...\n");
                                                   printf("* Quanta ingratidão!\n");
                                                   break;
                                              }
                                              break;
                                           case 2:
                                              system("clear"); //conversar com os trolls
                                              printf("* Você escolheu tentar convencer os Trolls a deixarem os Elfos em paz...\n");
                                              sleep(3);
                                              printf("* Os Trolls não parecem muito amigáveis para conversar...\n");
                                              sleep(3);
                                              printf("* Oh não! Eles não gostaram nada do seu papo!\n");
                                              sleep(3);
                                              printf("* Os Trolls, que ficaram ainda mais enfurecidos, começaram uma grande luta contra os Elfos...\n");
                                              sleep(3);
                                              printf("* Sem ter outra escolha, você se junta aos Elfos para acabar com a invasão.\n");
                                              sleep(3);
                                              printf("* E assim, você acabou com os Trolls e salvou a tribo élfica\n");
                                              sleep(3);
                                              printf("* Como consequência dessa luta, você perdeu 5 pontos de vida.\n");
                                              vida -= 5;
                                              sleep(3);
                                              printf("* Por causa de sua atitude, sua reputação com os Elfos está alta.\n");
                                              sleep(3);
                                              printf("* Como recompensa, os Elfos te deram uma fruta estranha... Deseja comer?\n");
                                              printf("* 1 - Comer\n");
                                              printf("* 2 - Jogar fora\n");
                                              scanf("%d", &fruta);
                                              while (fruta != 1 && fruta != 2) {
                                                printf("! Opção não reconhecida, tente novamente !\n");
                                                printf("* 1 - Comer\n");
                                                printf("* 2 - Jogar fora\n");
                                                scanf("%d", &fruta);
                                              }
                                              switch(fruta) {
                                                case 1: //comer fruta
                                                   printf("* Você escolheu comer a fruta...\n");
                                                   sleep(3);
                                                   printf("* A fruta te recuperou 10 pontos de vida!\n");
                                                   vida += 10;
                                                   sleep(2);
                                                   printf("* Sua vida: %d\n", vida);
                                                   break;
                                                case 2: //jogar fora
                                                   printf("* Você escolheu jogar a fruta fora...\n");
                                                   sleep(3);
                                                   printf("* Quanta ingratidão!\n");
                                                   break;
                                              }
                                              break;
                                           case 3:
                                              system("clear");
                                              if (alinhamento == 3) {
                                                while (evento2 != 1 && evento2 != 2) {
                                                   printf("! Você precisa seguir sua índole, você não pode simplesmente ter o alinhamento bom e escolher matar todos os elfos !\n");
                                                   printf("* 1 - Lutar a favor dos Elfos e acabar com a invasão dos Trolls\n");
                                                   printf("* 2 - Tentar convencer os Trolls a deixarem os elfos em paz\n");
                                                   printf("* 3 - Lutra a favor dos Trolls e dizimar os Elfos que moram nessa floresta\n");
                                                   scanf("%d", &evento2);
                                                }
                                              } else {
                                                  printf("* Você escolheu ajudar os Trolls a aniquilarem os Elfos...\n");
                                                  sleep(3);
                                                  printf("* Não só nessa pequena vila mas em toda a floresta, a existência dos Elfos foi varrida...\n");
                                                  sleep(3);
                                                  printf("* Parece que, agora, toda a ilha sabe sobre você e seus atos.\n");
                                                  sleep(3);
                                                  printf("* Sua reputação entre a população da ilha está baixa. Se contente com as consequências...\n");
                                                  sleep(7);
                                              }
                                           break;
                                        }

                                           if (pegoumapa == 1) {
                                              printf("* Ao sair da Floresta Élfica, você abre o mapa e procura seu próximo destino.\n");
                                              sleep(3);
                                              printf("* As montanhas do Norte parece um ótimo lugar para visitar...\n");
                                              sleep(3);
                                              printf("* E é para lá que você irá.\n");
                                          } else {
                                              printf("* Finalmente você deixa a Floresta Élfica, e novamente você segue sem rumo...\n");
                                          }

                                          sleep(7);
                                          system("clear");
                                          printf("* Você avista as motanhas logo à sua frente.\n");
                                          sleep(3);
                                          printf("* Para chegar lá, você precisa atravassar uma ponte de madeira.\n");
                                          sleep(4);
                                          printf("* Oh não! Parece que a ponte está totalmente destruída. O que você fará?\n");

                                        return 0;
                                } else {
                                        system("clear");
                                        printf("\n");
                                        printf("! Você não pode iniciar o jogo sem ter criado o personagem !\n");
                                        continue;
                                }
                        case 3:
                                printf("\n");
                                printf("* Você escolheu sair do jogo *\n");
                                break;
                        default:
                                printf("\n");
                                printf("! Opção não reconhecida, tente novamente !\n");
                                break;

                  }
        }
        return 0;
}
